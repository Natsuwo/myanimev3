extends ./layouts/default
block content
    div.container.ma-container-mobile
        - var breadcrumb = [{title: 'Home', href: '/' }, {title: anime.title}]
        if(isMobile)
            include ./components/animeInfoMobile
            include ./components/episodeList
            include ./components/breadcrumb
        else
            include ./components/breadcrumb
            include ./components/animeInfo
            include ./components/episodeList