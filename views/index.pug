extends ./layouts/default
append head
    meta(name='description', content=settings.descriptions)
    meta(property='fb:pages', content='469597040116400')
    meta(property='fb:app_id', content='2167104370235589')
    meta(property='og:site_name', content='MyanimeTV')
    meta(property='og:title', content=`${settings.site_title} - ${pageTitle}`)
    meta(property='og:url', content=url)
    meta(property='og:image', content='')
    meta(property='og:description', content=settings.descriptions)
    meta(property='og:type', content='video.episode')
    meta(property='twitter:card', content='summary_large_image')
    meta(property='twitter:site', content='@myanime_co')
    meta(property='twitter:url', content=url)
    meta(property='twitter:image', content='')
    meta(property='twitter:description', content=settings.descriptions)
    meta(property='twitter:title', content=`${settings.site_title} - ${pageTitle}`)
    meta(property='twitter:app:country', content='US')
block content
    div.container-fluid.ma-container-mobile
        if(currentSeason)
            div.ma-billboard
                section
                    div.ma-content-title
                        h1(class=(isMobile ? "ma-pageTitle ma-pageTitle-mobile": "ma-pageTitle")) #{currentSeason.caption}
                    - var id = "current-season"
                    - var data = currentSeason.items
                    div.ma-content-section
                        if(isMobile)
                            include ./components/cardList
                        else
                            include ./components/carouselLarge
        div.ma-billboard
            section
                div.ma-content-title
                    h1(class=(isMobile ? "ma-pageTitle ma-pageTitle-mobile": "ma-pageTitle")) Top Rank
                - var id = "top-rank"
                - var data = topRank
                div.ma-content-section
                    if(isMobile)
                        include ./components/cardList
                    else
                        include ./components/carouselSmall
        div.ma-billboard
            each val in features
                section
                    - var id = val.name
                    - var data = val.cards
                    div.ma-content-title
                        h1(class=(isMobile ? "ma-pageTitle ma-pageTitle-mobile": "ma-pageTitle")) #{val.title}
                    div.ma-content-section
                        if(isMobile)
                            include ./components/cardList
                        else
                            include ./components/carouselMedium