.ma-card-list-column.ma-card-list-column-mobile(role='list')
  - var twoArray = data.reduce(function(result, value, index, array) {
  -       if (index % 2 === 0) result.push(array.slice(index, index + 2));
  -       return result;
  -   }, []);
  each val in twoArray
    .ma-card-list-column-row.ma-card-list-column-row-mobile
      each item in val
        - var {title, anime_id, thumb, slug} = item
        - var isNew = item.new
        .ma-card-list-column-item.ma-card-list-column-item-mobile(role='listitem' style='width: calc(50%);')
          .ma-card
            a.ma-link-block(href=`/anime/${anime_id}/${slug}`)
              .ma-card-inner
                .ma-m-thumbnail.ma-m-thumbnail-loaded
                  - thumb = proxyimg(thumb)
                  img.ma-m-thumbnail-image(alt=title srcset=thumb +'?w=242&h=136&f=webp 1x, '+thumb+'?w=484&h=272&f=webp 2x' loading='lazy' src=thumb+'?w=242&h=136&f=webp')
                  .ma-m-thumbnail-play.ma-m-thumbnail-play-mobile
                    span.ma-m-play-icon
                      svg.ma-symbol(aria-label='' width='100%' height='100%' role='img' focusable='false')
                        use(xlink:href='/imgs/icons/playback.svg#svg-body')
                .ma-card-list-column-caption.ma-card-list-column-caption-mobile
                  .ma-card-list-column-caption-inner
                    p.ma-card-title.ma-card-title-mobile
                      span.ma-collapsed-text-container(style='line-height: 1.3; max-height: 1.3em; -webkit-line-clamp: 1;') #{title}
                    if(isNew)
                      p.ma-newest-label.ma-newest-label-mobile New Episode