.ma-card
    a.ma-link-block(href='/anime/1')
        .ma-card-inner
            .ma-m-thumbnail.ma-m-thumbnail-loaded
                img.ma-m-thumbnail-image(alt=title, srcset=img_url+'?height=136&quality=50&format=webp 1x, '+img_url+'?height=272&quality=50&format=webp 2x' loading='lazy', src=img_url+ '?height=136&quality=50&format=webp')
            .ma-card-list-column-caption
                .ma-card-list-column-caption-inner
                    p.ma-card-title
                        span.ma-collapsed-text-container(style='line-height: 1.5; max-height: 3em; -webkit-line-clamp: 2;') #{title}
                    p.ma-newest-label New Episode
