h1.ma-pageTitle Anime Ranking
.ma-ranking-body
    .ma-ranking-type
        ul.ma-ranking-type-tablist.ma-non-list(role='tablist')
            li.ma-ranking-type-tablist-item(role='tab' aria-selected='true')
                a.ma-ranking-type-tablist-link.ma-link.ma-outline(href='/ranking/views') by Views
            li.ma-ranking-type-tablist-item(role='tab' aria-selected='false')
                a.ma-ranking-type-tablist-link.ma-link.ma-outline(href='/ranking/favorites') by Favorites
        .ma-select-menu
            .ma-select-menu-desktop
                div.btn.ma-select-menu-desktop-button.ma-select-menu-desktop-button-right(data-toggle="collapse" href="#select-menu-1" aria-expanded="false" aria-controls="select-menu-1")
                    span.ma-select-menu-desktop-label All
                    svg.ma-select-menu-desktop-icon.ma-icon-symbol(aria-label='' height='5' role='img' width='8')
                        use(xlink:href='/imgs/icons/dropdown.svg#svg-body')
                ul#select-menu-1.ma-select-menu-desktop-list.ma-select-menu-desktop-list-right.collapse.ma-non-list(role='menu' style='width: 390px;')   
                    li.ma-select-menu-desktop-list-item(tabindex='0' role='menuitem' style='width: 33.3333%;')
                        a.ma-link(href="?g=all") All
                    each genre in genres
                        li.ma-select-menu-desktop-list-item(tabindex='0' role='menuitem' style='width: 33.3333%;')
                            a.ma-link(href="?g="+genre.genre_id) #{genre.title}
    .ma-ranking-list
        each val, index in data
            - var {title, anime_id, thumb, slug} = val
            .ma-ranking-list-item
                a.ma-link-block(href=`/anime/${anime_id}/${slug}`)
                    .ma-ranking-list-item-inner
                        .ma-ranking-list-item-thumbnail
                            .ma-m-thumbnail.ma-m-thumbnail-loaded
                                - thumb = proxyimg(thumb)
                                img.ma-m-thumbnail-image(alt=title srcset=thumb+'?w=192&h=108&f=webp 1x, '+thumb+'?w=384&h=216&f=webp 2x' loading='lazy' src=thumb+'?=192&h=108&f=webp')
                                .ma-m-thumbnail-play.ma-m-thumbnail-play-desktop
                                    span.ma-m-play-icon
                                        svg.ma-symbol(aria-label='' width='100%' height='100%' role='img' focusable='false')
                                            use(xlink:href='/imgs/icons/playback.svg#svg-body')
                        .ma-ranking-list-item-body
                            span.ma-ranking-list-item-rank #{index + 1}
                            h2.ma-ranking-list-item-heading
                                span.ma-collapsed-text-container(style='line-height: 1.3; max-height: 2.6em; -webkit-line-clamp: 2;') #{title}