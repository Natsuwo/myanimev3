header.navbar.navbar-dark.ma-bg-dark.ma-navbar.fixed-top
    ul.ma-navbar-menu-left.ma-non-list.m-0.p-0
        li.ma-navbar-menu-item
            div.ma-navbar-menu
                div.btn.ma-navbar-button.navbar-toggler#sidebar-toggler(data-trigger=isMobile ? "false" : "true")
                    span.navbar-toggler-icon
        li.ma-navbar-menu-item
            div.ma-navbar-menu
                a(href="/")
                    div.ma-navbar-logo.ma-navbar-button
                        img.ma-logo(alt="BakadoraTV" src='/imgs/logo-default.svg' onerror="this.onerror=null; this.src='/imgs/logo-default.png'")
    ul.position-relative.ma-non-list.m-0.p-0.ma-search-bar
        li.ma-navbar-search-bar
            form.ma-navbar-search-area(role='search' action="/search")
                input#ma-search-input.ma-navbar-search-input(type='text' name='q' autocomplete='off' placeholder='Sword Art Online' value='')
                label(for='ma-search-input' style="display: none;") Search something?
                div#ma-search-icon.ma-navbar-search-icon
                    i.fas.fa-search
                .ma-navbar-search-content
            script(type='application/ld+json').
                {"@context": "https://schema.org","name": "searchBox","@type": "WebSite","url": "https://bakadora/","potentialAction": {"@type": "SearchAction","target": "https://bakadora/search/?q={search_term_string}","query-input": "required name=search_term_string"}}
